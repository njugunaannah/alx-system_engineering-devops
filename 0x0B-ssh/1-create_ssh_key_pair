#!/usr/bin/env bash

# This script creates an RSA SSH key pair.

# Check if the key pair already exists
if [ -f "school" ] || [ -f "school.pub" ]; then
    echo "SSH key pair 'school' or 'school.pub' already exists."
    exit 1
fi

# Specify the desired key size (4096 bits) and passphrase ('betty')
ssh-keygen -t rsa -b 4096 -C "Generated by script" -f "school" -N "betty"

# Check if the key generation was successful
if [ $? -eq 0 ]; then
    echo "SSH key pair 'school' created successfully."
else
    echo "Failed to create SSH key pair."
fi

